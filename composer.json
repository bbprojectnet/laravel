{
	"$schema": "https://getcomposer.org/schema.json",
	"name": "laravel/laravel",
	"type": "project",
	"description": "The skeleton application for the Laravel framework.",
	"keywords": ["laravel", "framework"],
	"license": "MIT",
	"require": {
		"php": "^8.2",
		"laravel/framework": "^12.0",
		"laravel/tinker": "^2.10.1"
	},
	"require-dev": {
		"barryvdh/laravel-debugbar": "^3.13",
		"barryvdh/laravel-ide-helper": "^3.0",
		"brianium/paratest": "^7.4",
		"fakerphp/faker": "^1.23",
		"friendsofphp/php-cs-fixer": "^3.52",
		"larastan/larastan": "^2.9",
		"laravel/pint": "^1.13",
		"laravel/sail": "^1.41",
		"mockery/mockery": "^1.6",
		"nunomaduro/collision": "^8.6",
		"phpunit/phpunit": "^11.5.3"
	},
	"autoload": {
		"psr-4": {
			"App\\": "app/",
			"Database\\Factories\\": "database/factories/",
			"Database\\Seeders\\": "database/seeders/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"scripts": {
		"post-autoload-dump": [
			"Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
			"@php artisan package:discover --ansi"
		],
		"post-create-project-cmd": [
			"@php artisan key:generate --ansi",
			"@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
			"@php artisan migrate --graceful --ansi"
		],
		"post-install-cmd": [
			"@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
			"@php -r \"file_exists('supervisor.conf') || copy('supervisor.conf.example', 'supervisor.conf');\""
		],
		"post-update-cmd": [
			"@php artisan vendor:publish --tag=laravel-assets --ansi --force"
		],
		"ide-generate": [
			"@php -r \"file_exists('./database/support.sqlite') || file_put_contents('./database/support.sqlite', '') === 0;\"",
			"@php artisan migrate:fresh --ansi --env=support",
			"@php artisan ide-helper:generate --ansi --env=support",
			"@php artisan ide-helper:models --ansi --env=support --write --reset"
		],
		"cs-fix": [
			"php-cs-fixer fix --ansi"
		],
		"analyse": [
			"phpstan analyse --ansi --memory-limit=2G"
		],
		"test": [
			"@php artisan test --ansi --compact --no-coverage --stop-on-failure --stop-on-error"
		],
		"test:profile": [
			"@php artisan test --ansi --compact --profile --no-coverage"
		],
		"test:all": [
			"@php artisan test --ansi --parallel --no-coverage"
		],
		"test:coverage": [
			"@php artisan test --ansi --parallel",
			"start storage/framework/testing/report/index.html"
		],
		"pre-commit": [
			"@ide-generate",
			"@cs-fix",
			"@analyse",
			"@test:all"
		],
		"clear": [
			"@php artisan cache:clear --ansi || exit 0",
			"@php artisan config:clear --ansi",
			"@php artisan event:clear --ansi",
			"@php artisan route:clear --ansi",
			"@php artisan view:clear --ansi"
		],
		"setup": [
			"@php artisan key:generate --ansi",
			"@php artisan storage:link --ansi"
		],
		"optimize": [
			"@php artisan optimize --ansi"
		],
		"seed": [
			"@php artisan cache:clear --ansi || exit 0",
			"@php artisan migrate:fresh --ansi --seed"
		],
		"server": [
			"@php artisan serve --ansi"
		],
		"schedule": [
			"@php artisan schedule:work --ansi"
		],
		"queue": [
			"@php artisan queue:listen --ansi"
		],
		"dev": [
			"Composer\\Config::disableProcessTimeout",
			"npx concurrently \"php artisan serve --ansi\" \"php artisan schedule:work --ansi\" \"php artisan queue:listen --ansi\" --names=server,schedule,queue"
		]
	},
	"extra": {
		"laravel": {
			"dont-discover": []
		}
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"process-timeout": 0,
		"sort-packages": true,
		"allow-plugins": {
			"pestphp/pest-plugin": true,
			"php-http/discovery": true
		}
	},
	"minimum-stability": "stable",
	"prefer-stable": true
}
